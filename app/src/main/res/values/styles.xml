<resources>

    <style name="StatsCard">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="StatsInner">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="StatsNumber">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StatsLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777777</item>
    </style>

    <style name="ActionCard">
        <item name="cardCornerRadius">14dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="ActionText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
