<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/candidate_card_bg"
    android:elevation="4dp">

    <!-- Candidate Info Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Profile Image (Tap to Upload) -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/imgCandidate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_camera"
                android:scaleType="centerCrop"
                android:background="@drawable/image_placeholder_bg"
                android:contentDescription="Candidate Image"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvAddPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tap to Add\nPhoto"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#777"
                android:textSize="12sp" />
        </FrameLayout>

        <!-- Candidate Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candidate Name"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etCandidateName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Enter candidate name"
                android:padding="10dp"
                android:background="@drawable/edittext_bg"
                android:textSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short Brief"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etCandidateBrief"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="top"
                android:hint="Write a short brief..."
                android:padding="10dp"
                android:background="@drawable/edittext_bg"
                android:textSize="15sp"
                android:textColor="#000"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Delete Button -->
    <Button
        android:id="@+id/btnDeleteCandidate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="ðŸ—‘ Delete Candidate"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:elevation="2dp"/>
</LinearLayout>
